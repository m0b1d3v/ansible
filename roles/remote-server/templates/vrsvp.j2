[Unit]
Description=VRSVP Discord Bot
Requires=network.target

[Service]
Environment="VRSVP_DISCORD_BOT_SECRET_TOKEN={{ secret.vrsvp.bot }}"
Environment="SENTRY_DSN={{ secret.vrsvp.sentry }}"
Environment="VRSVP_DISCORD_WEBHOOK_AVATAR={{ secret.vrsvp.avatar }}"
Environment="VRSVP_DISCORD_WEBHOOK_DESTINATION={{ secret.vrsvp.webhook }}"
ExecStart=/srv/vrsvp/private/vrsvp-{{ server.vrsvp.version }}/bin/vrsvp

[Install]
WantedBy=multi-user.target
